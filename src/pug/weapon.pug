include abstracts/_mixins.pug

form(class="{{cssClass}}" autocomplete="off")
  header.sheet-header
    img.weapon-img(data-edit="img" src="{{item.img}}" title="{{item.name}}")
    .header-fields
      .grid.text-capitalize
        input(name="name" placeholder="name" type="text" value="{{item.name}}")
      .grid
        .template-type.text-capitalize
          | {{item.type}}
  hr


  section.content
    .attributes
      .grid.grid-2column
        .div
          label Weight
          input(type="text" name="data.weight" value="{{data.weight}}" data-dtype="Number")
        .div 
          label Cost
          input(type="text" name="data.cost" value="{{data.cost}}" data-dtype="Text")
      .grid 
          label Properties
          input(type="text" name="data.properties" value="{{data.properties}}" data-dtype="Text")
    .description
      +label('description', 'weapon')
    | {{editor content=data.description target="data.description" button=true owner=owner editable=editable}}

