include abstracts/_mixins.pug

form(class="{{cssClass}}" autocomplete="off")
  header.sheet-header
    img(data-edit="img" src="{{actor.img}}" title="{{actor.name}}")
    .header-fields.grid.grid-row-gap
      .grid.name
        input(name="name" placeholder="name" type="text" value="{{actor.name}}")
      .grid.grid-column-gap.font-smallcap.class
        each val in ['class', 'level', 'xp', 'xp bonus']
          .grid.auto-2column.grid-column-gap
            label(for=`{{data.${attrName(val)}}}`) #{`${val}`}
            input(name=`{{data.${attrName(val)}}}` placeholder=name type='text' value=`{{data.${attrName(val)}}}`)
  hr

  section.content.grid.grid-row-gap
    .grid.core
      .attributes
        each val in ['might', 'learning', 'insight', 'fortitude', 'agility', 'charisma']
          div(class="attribute_value")
            label(for=`{{data.attributes.${val}.value}}`) #{`${val}`}
            input(name=`{{data.attributes.${val}.value}}` placeholder='10' type='number' value=`{{data.attributes.${val}.value}}`)
          div(class="attribute_mod")
            label(for=`data.attributes.${val}.modifier`)
              | #{`{{data.attributes.${val}.modifier}}`}
          div(class="attribute_description")
            label(for=`data.attributes.${val}.modifier`)
              | #{`{{data.attributes.${val}.description}}`}
        div(class="attribute_value")
          label(for=`{{data.infamy}}`) #{`${val}`}
          input(name=`{{data.infamy}}` placeholder=`3` type='number' value=`{{data.infamy}}`)
